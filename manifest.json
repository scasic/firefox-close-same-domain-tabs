{
  "manifest_version": 2,
  "name": "Close same domain tabs",
  "version": "1.0",
  "description": "Closes all tabs for the same domain",
  "icons": {
    "16": "icons/close16.png",
    "32": "icons/close32.png"
  },
  "background": {
      "scripts": ["background.js"]
  }, 
  "permissions": [
      "activeTab",
      "tabs",
      "contextMenus"
  ]
}